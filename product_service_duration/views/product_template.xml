<odoo>

    <record id="product.product_template_only_form_view" model="ir.ui.view">
        <field name="name">Product Template Form - Service Duration</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="service_duration"
                       widget="float_time"
                       attributes="{'invisible': [('type', '!=', 'service')]}"
                       />
                <field name="service_user_id"
                       attributes="{'invisible': [('type', '!=', 'service')]}"
                       />
            </xpath>
        </field>
    </record>

</odoo>
